			   xmlns:imagegallery="org.robotlegs.demos.imagegallery.*"
			   xmlns:components="org.robotlegs.demos.imagegallery.views.components.*"
			   maxWidth="900"
			   viewSourceURL="srcview/index.html">
	
	<s:layout>
		<s:VerticalLayout paddingBottom="10"
